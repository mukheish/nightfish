
#include "stdafx.h"
#include <iostream>
#include <iomanip>
using namespace std;
int main()
{

	int choice,month,adult=50,kids=20,payment;
	do {
		cout << setw(67) << "Enter 1 for adult\n";
		cout << setw(66) << "Enter 2 for kids\n";
		cout << setw(76) << "Enter 3 for Senior citizen\n";
		cout << setw(73) << "Enter 4 to exit the menu";
		cin >> choice;


		switch (choice)
		{

		case 1:cout << "enter the number of month\n";
			cin >> month;
			 payment = adult * month;
			 cout << "payment :RM  " << payment;
			break;
		case 2:cout << "enter the number of months\n" << "the price is 20\n";
			cin >> month;
			payment = kids * month;
			cout << "payment:RM " << payment;
			break;
		case 3:cout << "Senior citizen\n" << "the price is free\n";
			break;
		case 4:cout << "Exit the menu\n";
			break;
		default: cout << "Please enter number between 1-3\n";

			char month;
			cout << "How many months do you plan to go to the gym";
			cin >> month;

		}

	} while (choice != 4);
	cout << "TQ for using our Gym service\n";

	return 0;
}



